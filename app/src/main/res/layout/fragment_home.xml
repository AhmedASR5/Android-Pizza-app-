<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment"
    android:background="@color/mediumGray">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textViewHistory"
            android:layout_width="352dp"
            android:layout_height="520dp"
            android:layout_margin="16dp"
            android:background="@color/mediumGray"
            android:padding="16dp"
            android:text="Welcome to Tweety Store! Our journey began in 2000 with the vision of serving delicious pizzas made with the finest ingredients. Over the years, we have grown to become a favorite spot for pizza lovers, offering a wide variety of pizzas, each crafted with care and passion. Join us and experience the taste of perfection!"
            android:textColor="@color/white"
            android:textSize="22dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>
